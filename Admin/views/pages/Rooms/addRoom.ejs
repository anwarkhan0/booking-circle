<div id="spinner">
  <div id="spinning-wheel" class="text-center ">
    <div class="spinner-grow" style="width: 4rem; height: 4rem;" role="status">
      <span class="sr-only">Loading...</span>
    </div>
  </div>
</div>


<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Rooms23432</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item">Room</li>
            <li class="breadcrumb-item active">Add Room</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <% if(flashMessage.length> 0){ %>
      <div class="alert alert-danger m-3 mt-2" style="z-index: 10001;" role="alert" id="flashMessage">
        <%= flashMessage %>
      </div>
      <% } %>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card card-success">
            <div class="card-header">
              <h3 class="card-title">Add Room</h3>
            </div>
            <div class="card-body">
              <form action="/admin/Rooms/addRoom" method="POST">
                <h5><b>Hotel Details</b></h5>
                <hr>
                <div class="row">
                  <div class="form-group col-md-6 offset-md-3">
                    <label>Select Hotel</label>
                    <select class="form-control select2" name="hotel">
                      <% for(let i=0; i< hotels.length; i++) { %>
                        <option
                          value="<%= hotels[i].id %>" <%= hotelId===hotels[i].id ? 'selected' : '' %> >
                          <%= hotels[i].name %>
                        </option>
                        <% } %>
                    </select>
                  </div>
                </div>

                <hr>
                <h5><b>Room Details</b></h5>
                <hr>
                <div class="row">
                  <div class="form-group col-md-4">
                    <label>Select Beds</label>
                    <select class="form-control" name="beds">
                      <option value="1" <%= oldInput.beds==1 ? 'selected' : '' %> >Single Bedded</option>
                      <option value="2" <%= oldInput.beds==2 ? 'selected' : '' %>>2 Bedded</option>
                      <option value="3" <%= oldInput.beds==3 ? 'selected' : '' %>>3 Bedded</option>
                      <option value="4" <%= oldInput.beds==4 ? 'selected' : '' %>>4 Bedded</option>
                      <option value="5" <%= oldInput.beds==5 ? 'selected' : '' %>>5 Bedded</option>
                    </select>
                  </div>

                  <div class="form-group col-md-4">
                    <label>Hot Water</label>
                    <select class="form-control" name="hotWater">
                      <option value="true" <%= oldInput.hotWater ? 'selected' : '' %>>Yes</option>
                      <option value="false" <%= oldInput.beds ? '' : 'selected' %>>No</option>
                    </select>
                  </div>

                  <div class="form-group col-md-4">
                    <label>Heater</label>
                    <select class="form-control" name="heater">
                      <option value="true" <%= oldInput.heater ? 'selected' : '' %> >Yes</option>
                      <option value="false" <%= oldInput.heater ? '' : 'selected' %>>No</option>
                    </select>
                  </div>

                  <div class="form-group col-md-4">
                    <label>Balcony</label>
                    <select class="form-control" name="balcony">
                      <option value="true" <%= oldInput.balcony ? 'selected' : '' %> >Yes</option>
                      <option value="false" <%= oldInput.heater ? '' : 'selected' %>>No</option>
                    </select>
                  </div>

                  <div class="form-group col-md-4">
                    <label>Room Status</label>
                    <select class="form-control" name="status">
                      <option value="true" <%= oldInput.status ? 'selected' : '' %>>Available</option>
                      <option value="false" <%= oldInput.status ? '' : 'selected' %>>Not Available</option>
                    </select>
                  </div>

                  <div class="form-group col-md-4">
                    <label>Location</label>
                    <input type="text" value="<%= oldInput.location %>" name="location" placeholder="i.e: 3rd Floor" class="form-control" required>
                  </div>

                  <div class="form-group col-md-4">
                    <label>Room Charges</label>
                    <input type="number" value="<%= oldInput.charges %>" name="charges" placeholder="i.e: 5000" class="form-control" required>
                  </div>

                  <div class="form-group col-md-4">
                    <label>Room No</label>
                    <input type="number" value="<%= oldInput.roomNo %>" name="roomNo" placeholder="i.e: 5" class="form-control" required>
                  </div>

                  <div class="form-group col-md-4">
                    <label>Room Size</label>
                    <input type="text" value="<%= oldInput.size %>" name="size" placeholder="i.e: 47-52 sqft" class="form-control" required>
                  </div>

                  <div class="form-group col-md-4">
                    <label>Room Occupency</label>
                    <input type="text" value="<%= oldInput.occupency %>" name="occupency" placeholder="i.e: Upto 4 childrens" class="form-control"
                      required>
                  </div>

                  <div class="form-group col-md-4">
                    <label>Room Bed Size</label>
                    <select class="form-control select2" style="width: 100%;" name="bedSize">
                      <option value="king" <%= oldInput.bedSize==='king' ? 'selected' : '' %> >King Bed Only</option>
                      <option value="regular" <%= oldInput.bedSize==='regular' ? 'selected' : '' %> >Regular Beds Only</option>
                      <option value="king&regular" <%= oldInput.bedSize==='king&regular' ? 'selected' : '' %> >King &amp; Regular Beds</option>
                    </select>
                  </div>

                  <!-- New Data -->
                  <div class="form-group col-md-4">
                    <label>Room Video</label>
                    <input type="url" value="<%= oldInput.videoUrl %>" name="videoUrl" placeholder="i.e: https://www.youtube.com/embed/XV7OFsykBT0"
                      class="form-control" required>
                  </div>

                  <div class="form-group col-md-6">
                    <label>Room Description</label>
                    <textarea name="description" id="" rows="5" class="form-control" placeholder="Room Description . . ."
                      required><%= oldInput.description %></textarea>
                  </div>

                  <div class="form-group col-md-6">
                    <label>Room Features</label>
                    <textarea name="features" id="" rows="5" class="form-control" placeholder="Room Features . . ."
                      required><%= oldInput.features %> </textarea>
                  </div>
                  <!-- /New Data --> 

                </div>


                <hr>
                <div class="form-group">
                  <a class="btn btn-secondary btn-sm" name="cancel" type="submit" onclick="history.back(-1)">Cancel</a>
                  <button class="btn btn-success btn-sm" type="submit" name="">Add Room</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>