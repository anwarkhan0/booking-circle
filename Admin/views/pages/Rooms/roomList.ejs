<div id="spinner">
  <div id="spinning-wheel" class="text-center ">
    <div class="spinner-grow" style="width: 4rem; height: 4rem;" role="status">
      <span class="sr-only">Loading...</span>
    </div>
  </div>
</div>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Rooms</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <!-- <li class="breadcrumb-item">Appartments</li> -->
            <li class="breadcrumb-item active">Rooms List</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <% if(flashMessage.length> 0){ %>
      <div class="alert alert-info m-3 mt-2" style="z-index: 10001;" role="alert" id="flashMessage">
        <%= flashMessage %>
      </div>
      <% } %>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card card-success">
            <div class="card-header">
              <h3 class="card-title">Rooms List</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table id="tableData" class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>S#</th>
                    <th>Hotel</th>
                    <th>Location</th>
                    <th>Price</th>
                    <th>Floor</th>
                    <th>Room No.</th>
                    <th>Status</th>
                    <th style="text-align: center">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(let j= 0; j< hotels.length; j++){ %>
                    <% for(let i=0; i< hotels[j].rooms.length; i++){ %>
                    <tr id="<%= i %>">
                      <td>
                        <%= i + 1 %>
                      </td>
                      <td> 
                        <%= hotels[j].name %> 
                      </td>
                      <td>
                        <%= hotels[j].area %>
                      </td>
                      <td>
                        <%= hotels[j].rooms[i].charges %>
                      </td>
                      <td>
                        <%= hotels[j].rooms[i].location %> 
                      </td>
                      <td>
                        <%= hotels[j].rooms[i].roomNo %>
                      </td>
                      <td>
                        <% if(hotels[j].rooms[i].status) { %>
                          <span class="badge badge-primary">Available</span>
                          <% } else{ %>
                            <span class="badge badge-secondary">Unavailable</span>
                            <% } %>
                      </td>
                      <td align="center">
                        <a href="<%= '/admin/Rooms/editRoom/' + hotels[j].id + '?i=' + i %>" class="btn btn-primary btn-sm">Edit <i class="fa fa-pencil"></i></a>
                        <a href="<%= '/admin/Rooms/addGallery/' + hotels[j].id + '?i=' + i %>" class="btn btn-info btn-sm">Add <i
                            class="fa fa-picture-o"></i></a>
                        <a href="<%= '/admin/Rooms/editGallery/' + hotels[j].id + '?i=' + i %>" class="btn btn-success btn-sm">Edit <i
                            class="fa fa-picture-o"></i></a>
                            <% let deleteHandler=`deleteRoomHandler('/admin/Rooms/deleteRoom', '${hotels[j].id.toString()}', ${i})` %>
                            <button class="btn btn-danger btn-sm" onClick="<%= deleteHandler %>"><i class="fa fa-trash"></i></button>
                      </td>
                    </tr>
                    <% } %>
                  <% } %> 
                </tbody>
                <tfoot>
                  <tr>
                    <th>S#</th>
                    <th>Hotel</th>
                    <th>Location</th>
                    <th>Price</th>
                    <th>Floor</th>
                    <th>Room No.</th>
                    <th>Status</th>
                    <th style="text-align: center">Action</th>
                  </tr>
                </tfoot>
              </table>
            </div>
          </div>
        </div>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>