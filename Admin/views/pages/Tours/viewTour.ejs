<div id="spinner" >
  <div id="spinning-wheel" class="text-center ">
    <div class="spinner-grow" style="width: 4rem; height: 4rem;" role="status">
        <span class="sr-only">Loading...</span>
    </div>
  </div>
</div>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1><%= tour.tourType %></h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <!-- <li class="breadcrumb-item">Customers</li> -->
              <li class="breadcrumb-item active">Tour/Hike Info</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
            <div class="col-md-12" align="right">
              <a class="btn btn-secondary btn-sm" name="cancel" type="submit" onclick="history.back(-1)">Back <i class="fa fa-arrow-left"></i></a>
            </div><br><br>
          <div class="col-md-12">
            <div class="card card-success">
                <div class="card-header">
                    <h3 class="card-title">Tour/Hike Info</h3>
                </div>
                
                  <!-- /.card-header -->
                  <div class="card-body">
                    <table class="table table-bordered table-striped table-hover">
                      <tbody>
                            <tr>
                                <td><b>Tour / Hike </b></td>
                                <td><%= tour.tourType %></td>
                            </tr>

                            <tr>
                                <td><b>From Date</b></td>
                                <td><%= tour.startDate %></td>
                            </tr>

                            <tr>
                                <td><b>Return Date: </b></td>
                                <td><%= tour.endDate %></td>
                            </tr>

                            <tr>
                                <td><b>From Place: </b></td>
                                <td><%= tour.fromPlace %></td>
                            </tr>

                            <tr>
                                <td><b>To Place: </b></td>
                                <td><%= tour.toPlace %></td>
                            </tr>

                            <tr>
                                <td><b>Duration: </b></td>
                                <td><%= tour.days + '-days' %> & <%= tour.nights + '-nights' %></td>
                            </tr>

                            <tr>
                                <td><b>Total Vacancies </b></td>
                                <td><%= tour.availableSeats %></td>
                            </tr>

                            <tr>
                                <td><b>Available Vacancies </b></td>
                                <td><%= tour.availableSeats %></td>
                            </tr>

                            <tr>
                                <td><b>Remaining Vacancies </b></td>
                                <td><%= tour.availableSeats %></td>
                            </tr>

                            <tr>
                                <td><b>Charges Per Head </b></td>
                                <td>Pkr. <%= tour.chargesPerHead %></td>
                            </tr>
                      </tbody>
                    </table>
                  </div>
            </div>
          </div>
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>