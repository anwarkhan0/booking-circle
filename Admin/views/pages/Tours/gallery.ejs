<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Tour Gallery</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item">Tours</li>
              <li class="breadcrumb-item active">Tour Gallery</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
  
    <!-- Main content -->
    <section class="content">
      <% if(flashMessage.length> 0){ %>
        <div class="alert alert-info m-3 mt-2" style="z-index: 10001;" role="alert" id="flashMessage">
          <%= flashMessage %>
        </div>
        <% } %>
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card card-success">
              <div class="card-header">
                <h3 class="card-title">Tour Gallery</h3>
              </div>
              <div class="card-body">
                <a class="btn btn-info btn-lg mb-1" href="<%= '/admin/Tours/addGallery/' + tourId %>">Add
                  New<i class="fa fa-plus"></i></a>
                <div class="row">
                  <% gallery.forEach( (gallery, i) => { %>
                    <div class="col-md-4" id="<%= 'elem' + i %>">
                      <img src="<%= '/uploads/' + gallery %>" class="img-thumbnail" width="304" height="236">
                        <button style="width: 90%" class="btn btn-danger btn-sm" onclick="<%= `deleteImageHandler('/admin/Tours/deleteImage', '${tourId}', '${gallery}', '${'elem' + i}')` %>">Delete <i class="fa fa-trash"></i></button>
                    </div>
                    <% }) %>
                </div>
                <hr>
                <div class="form-group">
                  <a class="btn btn-secondary btn-sm" name="cancel" type="submit" onclick="history.back(-1)">Cancel</a>
                </div>
  
              </div>
            </div>
          </div>
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>