<div id="spinner" >
  <div id="spinning-wheel" class="text-center ">
    <div class="spinner-grow" style="width: 4rem; height: 4rem;" role="status">
        <span class="sr-only">Loading...</span>
    </div>
  </div>
</div>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Tour/Hike</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item">Tour/Hike</li>
              <li class="breadcrumb-item active">Tour/Hike List</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <% if(flashMessage.length> 0){ %>
        <div class="alert alert-info m-3 mt-2" style="z-index: 10001;" role="alert" id="flashMessage">
          <%= flashMessage %>
        </div>
        <% } %>
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card card-success">
                <div class="card-header">
                    <h3 class="card-title">Tour/Hike List</h3>
                </div>
                  <!-- /.card-header -->
                <div class="card-body">
                <table id="tableData" class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>S#</th>
                        <th>Tour | Hike</th>
                        <th>Tour Date</th>
                        <th>Return Date</th>
                        <th>Place</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                      <% for(let i = 0; i < tours.length; i++) { %>
                        <tr id="<%= tours[i].id %>">
                            <td><%= i + 1 %></td>
                            <td><span class="badge <%= tours[i].tourType === 'tour' ? 'badge-primary' : 'badge-secondary' %>" style="font-size: 14px;"><%= tours[i].tourType %></span></td>
                            <td><%= tours[i].startDate %></td>
                            <td><%= tours[i].endDate %></td>
                            <td><%= tours[i].fromPlace %> to <%= tours[i].toPlace %></td>
                            <td>
                              <a href=<%='/admin/Tours/viewTour/' + tours[i].id %> class="btn btn-info btn-sm"><i class="fa fa-eye"></i></a>
                              <a href=<%='/admin/Tours/editTour/' + tours[i].id %> class="btn btn-primary btn-sm"><i class="fa fa-pencil"></i></a>
                                <button class="btn btn-danger btn-sm" onclick="<%= `deleteHandler('/Tours/deleteTour', ${tours[i].id.toString()}` %>"><i class="fa fa-trash"></i></button>
                            </td>
                        </tr>
                      <% } %>
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>S#</th>
                            <th>Tour | Hike</th>
                            <th>Tour Date</th>
                            <th>Return Date</th>
                            <th>Place</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                </table>
                </div>
            </div>
          </div>
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>