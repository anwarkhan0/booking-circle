<div id="spinner">
  <div id="spinning-wheel" class="text-center ">
    <div class="spinner-grow" style="width: 4rem; height: 4rem;" role="status">
      <span class="sr-only">Loading...</span>
    </div>
  </div>
</div>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Slider Gallery</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item">Slider</li>
              <li class="breadcrumb-item active">Slider Gallery</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <% if(flashMessage.length> 0){ %>
        <div class="alert alert-info m-3 mt-2" style="z-index: 10001;" role="alert" id="flashMessage">
          <%= flashMessage %>
        </div>
        <% } %>
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card card-success">
              <div class="card-header">
                <h3 class="card-title">Slider Gallery</h3>
              </div>
              <div class="card-body">
                <a class="btn btn-info btn-lg mb-1" href="<%= '/admin/SliderImages/addSliderImages/' + gallery.id %>">Add New<i
                    class="fa fa-plus"></i></a>
                <div class="row">
                  <% for(let i=0; i< gallery.images.length; i++) { %>
                    <div class="col-md-4" id="<%= 'elem' + i %>">
                      <img src="<%= '/uploads/' + gallery.images[i] %>" class="img-thumbnail" width="304" height="236">
                        <button style="width: 90%" class="btn btn-danger btn-sm" onclick="<%= `deleteImageHandler('/admin/SliderGallery/deleteImage', '${gallery.id}', '${gallery.images[i]}', '${'elem' + i}')` %>">Delete <i
                            class="fa fa-trash"></i></button>
                    </div>
                    <% } %>
                </div>
                <hr>
                <div class="form-group">
                  <a class="btn btn-secondary btn-sm" name="cancel" type="submit" onclick="history.back(-1)">Cancel</a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>