<div id="spinner">
    <div id="spinning-wheel" class="text-center ">
      <div class="spinner-grow" style="width: 4rem; height: 4rem;" role="status">
        <span class="sr-only">Loading...</span>
      </div>
    </div>
  </div>
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Houses</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item">house</li>
              <li class="breadcrumb-item active">Edit House</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
  
    <!-- Main content -->
    <section class="content">
      <% if(flashMessage.length> 0){ %>
        <div class="alert alert-danger m-3 mt-2" style="z-index: 10001;" role="alert" id="flashMessage">
          <%= flashMessage %>
        </div>
        <% } %>
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card card-success">
              <div class="card-header">
                <h3 class="card-title">Edit</h3>
              </div>
              <div class="card-body">
                <form action="/admin/houses/edit" method="POST">
                  <h5><b>Details</b></h5>
                  <hr>
                  <div class="row">
                    <div class="form-group col-md-3">
                      <label>Name</label>
                      <input type="text" value="<%= house.name %>" name="houseName"
                        placeholder="Example: housement No. 3" class="form-control" required>
                    </div>
  
                    <div class="form-group col-md-3">
                      <label>Rent</label>
                      <input type="number" name="price" value="<%= house.price %>" placeholder="Example: 5000"
                        class="form-control" required>
                    </div>
  
                    <div class="form-group col-md-3">
                      <label>Contact</label>
                      <input type="number" name="contact" value="<%= house.contact %>"
                        placeholder="Example: 0946712215" class="form-control" required>
                    </div>
  
                    <div class="form-group col-md-3">
                      <label>Parking</label>
                      <select class="form-control" name="parking">
                        <option value="true" <%=house.parking ? 'selected' : '' %>>Yes</option>
                        <option value="false" <%=!house.parking ? 'selected' : '' %>>No</option>
                      </select>
                    </div>
  
                    <div class="form-group col-md-3">
                      <label>Location</label>
                      <select class="form-control" style="width: 100%;" name="area">
                        <% for(let i=0; i< areas.length; i++) { %>
                          <option value="<%= areas[i].name %>" <% house.area===areas[i].name ? 'selected'
                            : '' %>><%= areas[i].name %>
                          </option>
                          <% } %>
                      </select>
                    </div>
  
  
                    <div class="form-group col-md-6">
                      <label>Address</label>
                      <input type="text" name="address" value="<%= house.address %>"
                        placeholder="Example: Near Shell Ptrol Station, Madyan Bazar" class="form-control" required>
                    </div>
  
                    <div class="form-group col-md-3">
                      <label>Status</label>
                      <select class="form-control" name="status">
                          <option value="true" <%=house.availibilityStatus ? 'selected' : '' %>> Available </option>
                          <option value="false" <%=!house.availibilityStatus ? 'selected' : '' %> >Unavailable
                          </option>
                      </select>
                    </div>
                    <!-- New Data -->
                    <div class="form-group col-md-6">
                      <label>Description</label>
                      <textarea name="description" id="" rows="5" class="form-control"
                        placeholder="Apartment/House Description . . ." required><%= house.description %></textarea>
                    </div>
  
                    <div class="form-group col-md-6">
                      <label>Features</label>
                      <textarea name="features" id="" rows="5" class="form-control" placeholder="Apartment/House Features . . ."
                        required><%= house.features %></textarea>
                    </div>
  
                    <div class="form-group col-md-6">
                      <label>Video Link</label>
                      <input type="url" value="<%= house.videoUrl %>" name="videoUrl" placeholder="i.e: https://www.youtube.com/embed/XV7OFsykBT0"
                        class="form-control" required>
                    </div>
                    <!-- /New Data -->
  
                    <!-- <div class="form-group col-md-3">
                      <label>housement | House Classification</label>
                      <select class="form-control" style="width: 100%;" name="">
                        <option value="">Luxury</option>
                        <option value="">Economic</option>
                      </select>
                    </div> -->
                  </div>
  
                  <hr>
  
                  <h5><b>Owner Info &amp; Login Details</b></h5>
                  <hr>
                  <div class="row">
                    <div class="form-group col-md-6">
                      <label>Name</label>
                      <input type="text" name="ownerName" value="<%= house.ownerName %>"
                        placeholder="Example: Asif Khan" class="form-control" required>
                    </div>
  
                    <div class="form-group col-md-3">
                      <label>CNIC #</label>
                      <input type="number" name="ownerCNIC" value="<%= house.ownerCNIC %>"
                        placeholder="Example: xxxxx-xxxxxxx-x" class="form-control" required>
                    </div>
  
                    <div class="form-group col-md-3">
                      <label>Contact</label>
                      <input type="number" name="ownerContact" value="<%= house.ownerContact %>"
                        placeholder="Example: 03xxxxxxxxx" class="form-control" required>
                    </div>
  
  
                    <div class="form-group col-md-6">
                      <label>Email</label>
                      <input type="email" name="loginEmail" value="<%= house.loginEmail %>"
                        placeholder="Example: example@gmail.com" class="form-control" required>
                    </div>
  
                    <div class="form-group col-md-6">
                      <label>Change Password</label>
                      <input type="hidden" value="<%= house.loginPassword %>" name="oldLoginPassword">
                      <input type="password" name="loginPassword"
                        placeholder="New Password" class="form-control" value="" >
                    </div>
                  </div>
  
                  <input type="hidden" name="houseId" value="<%= house.id %>">
  
                  <hr>
                  <div class="form-group">
                    <a class="btn btn-secondary btn-sm" name="cancel" type="submit" onclick="history.back(-1)">Cancel</a>
                    <button class="btn btn-success btn-sm" type="submit" name="">Update</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>