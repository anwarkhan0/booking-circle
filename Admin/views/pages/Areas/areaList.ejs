<div id="spinner">
  <div id="spinning-wheel" class="text-center ">
    <div class="spinner-grow" style="width: 4rem; height: 4rem;" role="status">
      <span class="sr-only">Loading...</span>
    </div>
  </div>
</div>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Location</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item">Location</li>
            <li class="breadcrumb-item active">Location List</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <% if(flashMessage.length> 0){ %>
      <div class="alert alert-info m-3 mt-2" style="z-index: 10001;" role="alert" id="flashMessage">
        <%= flashMessage %>
      </div>
      <% } %>
      
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card card-success">
            <div class="card-header">
              <h3 class="card-title">Location List</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table id="tableData" class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>S#</th>
                    <th>Location Name</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>

                  <% for(let count=0; count < areas.length; count++ ){ %>

                    <tr id="<%= areas[count].id %>">
                      <td>
                        <%= count + 1 %>
                      </td>
                      <td>
                        <%= areas[count].name %>
                      </td>
                      <td>
                        <a href=<%="/admin/Areas/editArea/" + areas[count].id %> class="btn btn-success btn-sm">Edit &nbsp;<i
                            class="fa fa-pencil"></i></a>
                          <button class="btn btn-danger btn-sm" onClick="<%= `deleteHandler('/Areas/deleteArea', '${areas[count].id.toString()}')` %>"><i class="fa fa-trash"></i></button>
                      </td>
                    </tr>

                    <% } %>


                      <!-- <tr>
                        <td>2.</td>
                        <td>Mahodhand</td>
                        <td>
                            <a href="/Areas/editArea" class="btn btn-success btn-sm">Edit &nbsp;<i class="fa fa-pencil"></i></a>
                        </td>
                      </tr>

                      <tr>
                        <td>3.</td>
                        <td>Shahi Bagh</td>
                        <td>
                            <a href="/Areas/editArea" class="btn btn-success btn-sm">Edit &nbsp;<i class="fa fa-pencil"></i></a>
                        </td>
                      </tr> -->
                </tbody>
                <tfoot>
                  <tr>
                    <th>S.No. #</th>
                    <th>Location Name</th>
                    <th>Action</th>
                  </tr>
                </tfoot>
              </table>
            </div>
          </div>
        </div>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>