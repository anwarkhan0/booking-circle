<div id="spinner">
  <div id="spinning-wheel" class="text-center ">
    <div class="spinner-grow" style="width: 4rem; height: 4rem;" role="status">
      <span class="sr-only">Loading...</span>
    </div>
  </div>
</div>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Rental Vehicles</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item">Rental Vehicle</li>
            <li class="breadcrumb-item active">Add Vehicle</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <% if(flashMessage.length> 0){ %>
      <div class="alert alert-danger m-3 mt-2" style="z-index: 10001;" role="alert" id="flashMessage">
        <%= flashMessage %>
      </div>
      <% } %>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card card-success">
            <div class="card-header">
              <h3 class="card-title">Add Vehicle</h3>
            </div>
            <div class="card-body">
              <form action="/admin/Vehicles/addVehicle" method="POST">
                <h5><b>Details</b></h5>
                <hr>
                <div class="row">
                  <div class="form-group col-md-4">
                    <label>Category</label>
                    <select class="form-control" name="category" required>
                      <% for(let i=0; i< cats.length; i++) { %>
                        <option value="<%= JSON.stringify({id: cats[i].id, name: cats[i].name}) %>" <%= cats[i].name===oldInput.categoryName ? 'selected' : '' %> >
                          <%= cats[i].name %>
                        </option>
                        <% } %>
                    </select>
                  </div>

                  <div class="form-group col-md-4">
                    <label>Palate No</label>
                    <input type="text" value="<%= oldInput.vehicleNo %>" name="vehicleNo" placeholder="X-2652" class="form-control" required>
                  </div>

                  <div class="form-group col-md-4">
                    <label>Model</label>
                    <input type="number" value="<%= oldInput.model %>" name="model" placeholder="2002" class="form-control" required>
                  </div>


                  <div class="form-group col-md-4">
                    <label>Seats</label>
                    <input type="number" value="<%= oldInput.seats %>" name="seats" placeholder="5 only number" class="form-control" required>
                  </div>

                  <div class="form-group col-md-4">
                    <label>Service Area</label>
                    <select class="form-control" name="serviceArea" required>
                      <% areas.forEach((area)=>{ %> 
                      <option value="<%= area.name %>" <%= oldInput.area == area ? 'selected' : '' %> ><%= area.name %> </option>
                      <% }) %> 
                    </select>
                  </div>

                  <!-- New Data -->
                  <div class="form-group col-md-4">
                    <label>Video</label>
                    <input type="url" value="<%= oldInput.videoUrl %>" name="videoUrl" placeholder="i.e: https://www.youtube.com/embed/XV7OFsykBT0"
                      class="form-control" required>
                  </div>

                  <div class="form-group col-md-6">
                    <label>Description</label>
                    <textarea name="description" id="" rows="5" class="form-control" placeholder="Description . . ."
                      required><%= oldInput.description %></textarea>
                  </div>

                  <div class="form-group col-md-6">
                    <label>Features</label>
                    <textarea name="features" id="" rows="5" class="form-control" placeholder="Features . . ."
                      required><%= oldInput.features %></textarea>
                  </div>
                  <!-- /New Data -->
                </div>

                <h5><b>Owner Details</b></h5>
                <hr>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label>Name</label>
                    <input type="text" value="<%= oldInput.ownerName %>" name="ownerName" placeholder="Example: Asif Khan" class="form-control" required>
                  </div>

                  <div class="form-group col-md-6">
                    <label>CNIC #</label>
                    <input type="number" value="<%= oldInput.ownerCNIC %>" name="ownerCNIC" placeholder="xxxxx-xxxxxxx-x" class="form-control"
                      required>
                  </div>

                  <div class="form-group col-md-6">
                    <label>Contact</label>
                    <input type="number" value="<%= oldInput.ownerContact %>" name="ownerContact" placeholder="03xxxxxxxxx" class="form-control"
                      required>
                  </div>

                  <div class="form-group col-md-6">
                    <label>Address</label>
                    <input type="text" value="<%= oldInput.ownerAddress %>" name="ownerAddress" placeholder="Mingora, Landikas" class="form-control"
                      required>
                  </div>

                  <div class="form-group col-md-4">
                    <label>City</label>
                    <select class="form-control" name="ownerArea" required>
                      <% areas.forEach((area)=>{ %> 
                      <option value="<%= area.name %>" <%= oldInput.area == area ? 'selected' : '' %> ><%= area.name %> </option>
                      <% }) %> 
                    </select>
                  </div>

                </div>

                <hr>

                <hr>
                <div class="form-group">
                  <a class="btn btn-secondary btn-sm" name="cancel" type="submit" onclick="history.back(-1)">Cancel</a>
                  <button class="btn btn-success btn-sm" type="submit" name="">Add Rental Vehicle</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>