<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Customers</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <!-- <li class="breadcrumb-item">Customers</li> -->
              <li class="breadcrumb-item active">Customers List</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card card-success">
              <div class="card-header">
                <h3 class="card-title">Customers List</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="tableData" class="table table-striped table-hover">
                  <thead>
                    <tr>
                      <th>S#</th>
                      <th>Name</th>
                      <th>Email</th>
                      <th>Contact No.</th>
                      <th style="text-align: center">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% customers.forEach( (customer, i) => { %>
                      <tr id="<%= customer.id %>">
                        <td><%= i + 1 %></td>
                        <td><%= customer.name %></td>
                        <td><%= customer.email %></td>
                        <td><%= customer.phoneNo %></td>
                        <td align="center">
                          <a href="<%= '/admin/Customers/viewCustomer/' + customer.id %>" class="btn btn-success ">View <i class="fa fa-eye"></i></a>
                              <% let deleteHandler=`deleteHandler('/admin/Customers/deleteCustomer/', '${customer.id}')` %>
                              <button class="btn btn-danger" onClick="<%= deleteHandler %>"><i class="fa fa-trash"></i></button>
                        </td>
                      </tr>
                    <% }) %> 
                  </tbody>
                  <tfoot>
                    <tr>
                      <th>S#</th>
                      <th>Hotel</th>
                      <th>Location</th>
                      <th>Price</th>
                      <th>Floor</th>
                      <th>Room No.</th>
                      <th>Status</th>
                      <th style="text-align: center">Action</th>
                    </tr>
                  </tfoot>
                </table>
              </div>
            </div>
          </div>
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>