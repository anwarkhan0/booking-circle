<div id="spinner">
  <div id="spinning-wheel" class="text-center ">
    <div class="spinner-grow" style="width: 4rem; height: 4rem;" role="status">
      <span class="sr-only">Loading...</span>
    </div>
  </div>
</div>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Appartments | Houses</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <!-- <li class="breadcrumb-item">Appartments</li> -->
            <li class="breadcrumb-item active">Appartments | Houses List</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <% if(flashMessage.length> 0){ %>
      <div class="alert alert-info m-1 mt-2" style="z-index: 10001;" role="alert" id="flashMessage">
        <%= flashMessage %>
      </div>
      <% } %>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card card-success">
            <div class="card-header">
              <h3 class="card-title">Appartments List</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table id="tableData" class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>S#</th>
                    <th>Name</th>
                    <th>Contact</th>
                    <th>Parking</th>
                    <th>A | H</th>
                    <th>Location</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(let i=0; i< appartments.length; i++) { %>
                    <tr id="<%= appartments[i].id %>">
                      <td>
                        <%= i + 1 %>
                      </td>
                      <td>
                        <%= appartments[i].name %>
                      </td>
                      <td>
                        <%= appartments[i].contact %>
                      </td>
                      <td>
                        <% if(appartments[i].parking){ %>
                          <span class="badge badge-success"><i class="fa fa-check"></i></span>
                          <% } else { %>
                            <span class="badge badge-danger"><i class="fa fa-times"></i></span>
                            <% } %>
                      </td>
                      <td><span class="badge badge-info">
                          <%= appartments[i].appartmentType %>
                        </span></td>
                      <td>
                        <%= appartments[i].area %>
                      </td>
                      <td>
                        <% if(appartments[i].availibilityStatus){ %>
                          <span class="badge badge-primary">Available</span>
                          <% } else{ %>
                            <span class="badge badge-danger">Unavailable</span>
                            <% } %>
                      </td>
                      <td>
                        <a href="<%= '/admin/Appartments/editAppartmentHouse/' + appartments[i].id %> " class="btn btn-primary btn-sm"><i
                            class="fa fa-pencil"></i></a>
                        <% let deleteHandler="deleteHandler('/admin/Appartments/deleteAppartment', '" + appartments[i].id.toString() + "' )" %>
                          <button class="btn btn-danger btn-sm" onClick="<%= deleteHandler %>"><i class="fa fa-trash"></i></button>
                      </td>
                    </tr>
                    <% } %>

                      <!-- <tr>
                            <td>1</td>
                            <td>Example</td>
                            <td>0946712845</td>
                            <td><span class="badge badge-success"><i class="fa fa-check"></i></span></td>
                            <td><span class="badge badge-warning">House</span></td>
                            <td>Kalam</td>
                            <td><span class="badge badge-primary">Available</span></td>
                            <td>
                                <a href="/Appartments/editAppartmentHouse" class="btn btn-primary btn-sm"><i class="fa fa-pencil"></i></a>
                            </td>
                        </tr> -->

                </tbody>
                <tfoot>
                  <tr>
                    <th>S#</th>
                    <th>Name</th>
                    <th>Contact</th>
                    <th>Parking</th>
                    <th>A | H</th>
                    <th>Location</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                </tfoot>
              </table>
            </div>
          </div>
        </div>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>