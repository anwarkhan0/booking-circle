<div id="spinner">
  <div id="spinning-wheel" class="text-center ">
    <div class="spinner-grow" style="width: 4rem; height: 4rem;" role="status">
      <span class="sr-only">Loading...</span>
    </div>
  </div>
</div>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Houses</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <!-- <li class="breadcrumb-item">Appartments</li> -->
            <li class="breadcrumb-item active">Houses List</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card card-success">
            <div class="card-header">
              <h3 class="card-title">Houses List</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table id="tableData" class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>S#</th>
                    <th>Name</th>
                    <th>Contact</th>
                    <th>Parking</th>
                    <th>A | H</th>
                    <th>Location</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(let i=0; i< houses.length; i++){ %>
                    <tr id="<%= houses[i].id %>">
                      <td>
                        <%= i + 1 %>
                      </td>
                      <td>
                        <%= houses[i].name %>
                      </td>
                      <td>
                        <%= houses[i].contact %>
                      </td>
                      <td>
                        <% if(houses[i].parking) { %>
                          <span class="badge badge-success"><i class="fa fa-check"></i></span>
                          <% } else{ %>
                            <span class="badge badge-danger"><i class="fa fa-times"></i></span>
                            <% } %>
                      </td>
                      <td><span class="badge badge-info">House</span></td>
                      <td>
                        <%= houses[i].area %>
                      </td>
                      <td>
                        <% if(houses[i].availibilityStatus) { %>
                          <span class="badge badge-primary">Available</span>
                          <% } else{ %>
                            <span class="badge badge-secondary">Unavailable</span>
                            <% } %>
                      </td>
                      <td>
                        <a href="<%= '/admin/Appartments/addGallery/' + houses[i].id %>" class="btn btn-info btn-sm">Add <i
                            class="fa fa-picture-o"></i></a>
                        <a href="<%= '/admin/Appartments/editGallery/' + houses[i].id %>" class="btn btn-success btn-sm">Edit
                          <i class="fa fa-picture-o"></i></a>
                          <button class="btn btn-danger btn-sm" onClick="<%= `deleteHandler('/admin/Appartments/deleteAppartment', '${houses[i].id}')` %>"><i class="fa fa-trash"></i></button>
                      </td>
                    </tr>
                    <% } %>
                </tbody>
                <tfoot>
                  <tr>
                    <th>S#</th>
                    <th>Name</th>
                    <th>Contact</th>
                    <th>Parking</th>
                    <th>A | H</th>
                    <th>Location</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                </tfoot>
              </table>
            </div>
          </div>
        </div>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>