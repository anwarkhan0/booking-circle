<div id="spinner">
  <div id="spinning-wheel" class="text-center ">
    <div class="spinner-grow" style="width: 4rem; height: 4rem;" role="status">
      <span class="sr-only">Loading...</span>
    </div>
  </div>
</div>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Appartments</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item">Appartments</li>
            <li class="breadcrumb-item active">Edit Appartment</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <% if(flashMessage.length> 0){ %>
      <div class="alert alert-danger m-3 mt-2" style="z-index: 10001;" role="alert" id="flashMessage">
        <%= flashMessage %>
      </div>
      <% } %>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card card-success">
            <div class="card-header">
              <h3 class="card-title">Edit Appartment</h3>
            </div>
            <div class="card-body">
              <form action="/admin/Appartments/editAppartmentHouse" method="POST">
                <h5><b>Appartment</b></h5>
                <hr>
                <div class="row">
                  <div class="form-group col-md-3">
                    <label>Name</label>
                    <input type="text" value="<%= appart.name %>" name="appartName"
                      placeholder="Example: Appartment No. 3" class="form-control" required>
                  </div>

                  <div class="form-group col-md-3">
                    <label>Rent</label>
                    <input type="number" name="charges" value="<%= appart.charges %>" placeholder="Example: 5000"
                      class="form-control" required>
                  </div>

                  <div class="form-group col-md-3">
                    <label>Contact</label>
                    <input type="number" name="contact" value="<%= appart.contact %>"
                      placeholder="Example: 0946712215" class="form-control" required>
                  </div>

                  <div class="form-group col-md-3">
                    <label>Location</label>
                    <select class="form-control" style="width: 100%;" name="area">
                      <% for(let i=0; i< areas.length; i++) { %>
                        <option value="<%= areas[i].name %>" <% appart.area===areas[i].name ? 'selected'
                          : '' %>><%= areas[i].name %>
                        </option>
                        <% } %>
                    </select>
                  </div>

                  <div class="form-group col-md-2">
                    <label>Occupancy</label>
                    <input type="number" value="<%= appart.occupancy %>" name="occupancy" placeholder="only number"
                      class="form-control" required>
                  </div>

                  <div class="form-group col-md-5">
                    <label>Address</label>
                    <input type="text" name="address" value="<%= appart.address %>"
                      placeholder="Example: Near Shell Ptrol Station, Madyan Bazar" class="form-control" required>
                  </div>

                  <div class="form-group col-md-5">
                    <label>Video Link</label>
                    <input type="url" value="<%= appart.videoUrl %>" name="videoUrl" placeholder="i.e: https://www.youtube.com/embed/XV7OFsykBT0"
                      class="form-control" required>
                  </div>

                  <div class="row col-12">
                    <div class="form-group col-sm-12">
                      <div class="card card-primary">
                        <div class="card-header">
                          <div class="card-title">
                            Facilities
                          </div>
                        </div>
                        <div class="card-body">
                          <div class="form-check form-check-inline">
                            <input name="wifi" class="form-check-input" type="checkbox" id="" value="true" <%= appart.wifi ? 'checked' : '' %> >
                            <label class="form-check-label" for="inlineCheckbox3">Wifi</label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input name="parking" class="form-check-input" type="checkbox" id="" value="true" <%= appart.parking ? 'checked' : '' %> >
                            <label class="form-check-label" for="inlineCheckbox3">Parking Area</label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input name="kitchen" class="form-check-input" type="checkbox" id="" value="true" <%= appart.kitchen ? 'checked' : '' %> >
                            <label class="form-check-label" for="inlineCheckbox3">Kitchen</label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input name="view" class="form-check-input" type="checkbox" id="" value="true" <%= appart.view ? 'checked' : '' %> >
                            <label class="form-check-label" for="inlineCheckbox3">View</label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input name="tv" class="form-check-input" type="checkbox" id="" value="true" <%= appart.tv ? 'checked' : '' %> >
                            <label class="form-check-label" for="inlineCheckbox3">TV</label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input name="cleaning" class="form-check-input" type="checkbox" id="" value="true" <%= appart.cleaning ? 'checked' : '' %> >
                            <label class="form-check-label" for="inlineCheckbox3">Ckeaning Services</label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input name="pets" class="form-check-input" type="checkbox" id="" value="true" <%= appart.pets ? 'checked' : '' %> >
                            <label class="form-check-label" for="inlineCheckbox3">Pets</label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input name="secuirity" class="form-check-input" type="checkbox" id="" value="true" <%= appart.secuirity ? 'checked' : '' %>>
                            <label class="form-check-label" for="inlineCheckbox3" >Secuirity</label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input name="livingArea" class="form-check-input" type="checkbox" id="" value="true" <%= appart.livingArea ? 'checked' : '' %> >
                            <label class="form-check-label" for="inlineCheckbox3">Living Area</label>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- New Data -->
                  <div class="form-group col-md-6">
                    <label>Description</label>
                    <textarea name="description" id="" rows="5" class="form-control"
                      placeholder="Apartment/House Description . . ." required><%= appart.description %></textarea>
                  </div>

                  <div class="form-group col-md-6">
                    <label>Features</label>
                    <textarea name="features" id="" rows="5" class="form-control" placeholder="Apartment/House Features . . ."
                      required><%= appart.features %></textarea>
                  </div>

                  
                  <!-- /New Data -->

                  <!-- <div class="form-group col-md-3">
                    <label>Appartment | House Classification</label>
                    <select class="form-control" style="width: 100%;" name="">
                      <option value="">Luxury</option>
                      <option value="">Economic</option>
                    </select>
                  </div> -->
                </div>

                <hr>

                <h5><b>Owner Info &amp; Login Details</b></h5>
                <hr>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label>Name</label>
                    <input type="text" name="ownerName" value="<%= appart.ownerName %>"
                      placeholder="Example: Asif Khan" class="form-control" required>
                  </div>

                  <div class="form-group col-md-3">
                    <label>CNIC #</label>
                    <input type="number" name="ownerCNIC" value="<%= appart.ownerCNIC %>"
                      placeholder="Example: xxxxx-xxxxxxx-x" class="form-control" required>
                  </div>

                  <div class="form-group col-md-3">
                    <label>Contact</label>
                    <input type="number" name="ownerContact" value="<%= appart.ownerContact %>"
                      placeholder="Example: 03xxxxxxxxx" class="form-control" required>
                  </div>


                  <div class="form-group col-md-6">
                    <label>Login Email</label>
                    <input type="email" name="loginEmail" value="<%= appart.loginEmail %>"
                      placeholder="Example: example@gmail.com" class="form-control" required>
                  </div>

                  <div class="form-group col-md-6">
                    <label>Change Password</label>
                    <input type="hidden" value="<%= appart.loginPassword %>" name="oldLoginPassword">
                    <input type="password" name="loginPassword"
                      placeholder="New Password" class="form-control" value="" >
                  </div>
                </div>

                <input type="hidden" name="appartId" value="<%= appart.id %>">

                <hr>
                <div class="form-group">
                  <a class="btn btn-secondary btn-sm" name="cancel" type="submit" onclick="history.back(-1)">Cancel</a>
                  <button class="btn btn-success btn-sm" type="submit" name="">Edit Appartment | House</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>