<div id="spinner">
  <div id="spinning-wheel" class="text-center ">
    <div class="spinner-grow" style="width: 4rem; height: 4rem;" role="status">
      <span class="sr-only">Loading...</span>
    </div>
  </div>
</div>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Updates / Blog</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item">Updates</li>
              <li class="breadcrumb-item active">Edit Update</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <% if(flashMessage.length> 0){ %>
        <div class="alert alert-danger m-3 mt-2" style="z-index: 10001;" role="alert" id="flashMessage">
          <%= flashMessage %>
        </div>
        <% } %>
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card card-success">
              <div class="card-header">
                <h3 class="card-title">Edit Update / Blog</h3>
              </div>
              <div class="card-body">
                <form action="/admin/Updates/editUpdate" method="POST" enctype="multipart/form-data">
                    <div class="row">
                        <div class="form-group col-md-2" style="border-right: 1px solid #e0e0e0;">
                            <label>Blog No. </label>
                            <input type="text" style="border: none;" readonly name="blogNo" value="<%= 'blog#' + update.blogNo %>" class="form-control" required>
                        </div>
                        
                        <div class="form-group col-md-10">
                            <label>Blog Heading</label>
                            <input type="text" name="heading" value="<%= update.heading %>" placeholder="Example: Next Month 50% Off" class="form-control" required>
                        </div>
    
                        <div class="form-group col-md-6">
                            <label>Blog Author</label>
                            <input type="text" name="author" value="<%= update.author %>" placeholder="Example: C.E.O Rumman" class="form-control" required>
                        </div>

                        <div class="form-group  col-md-6">
                          <label>Blog Image/Video</label>
                          <input type="file" name="images" class="form-control" >
                        </div>
    
                        <div class="form-group col-md-12">
                            <label>Blog Description</label>
                            <textarea name="desc" id="blog" cols="30" rows="5" class="form-control" required placeholder="Enter Update/Blog Description Here!"><%- update.description %></textarea>
                        </div>
                    </div>
                    <input type="hidden" name="id" value="<%= update.id %>">
                    <input type="hidden" name="oldImage" value="<%= update.media %>">
                    <hr>
                    <div class="form-group">
                        <a class="btn btn-secondary btn-sm" name="cancel" type="submit" onclick="history.back(-1)">Cancel</a>
                        <button class="btn btn-success btn-sm" type="submit" name="addArea">Edit Blog</button>
                    </div>
                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>