<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Updates / Blog</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item">Updates</li>
              <li class="breadcrumb-item active">Add Update</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card card-success">
                <div class="card-header">
                    <h3 class="card-title">Updates / Blog List</h3>
                  </div>
                  <!-- /.card-header -->
                  <div class="card-body">
                    <table id="tableData" class="table table-striped table-hover">
                      <thead>
                        <tr>
                            <th>S#</th>
                            <th>Blog No.</th>
                            <th>Blog Heading</th>
                            <th>Blog Date</th>
                            <th style="text-align: center;">Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for(let i=0; i< updates.length; i++) { %>
                          <tr id="<%= updates[i].id %>">
                            <td><%= i + 1 %> </td>
                            <td>Blog#<%= updates[i].blogNo %></td>
                            <td><%= updates[i].heading %> </td>
                            <td><%= updates[i].date %> </td>
                            <td align="center">
                              <a href="<%= '/admin/Updates/editUpdate/' + updates[i].id %>" class="btn btn-success btn-sm">Edit &nbsp;<i
                                  class="fa fa-pencil"></i></a>
                                <button class="btn btn-danger btn-sm" onClick="<%= `deleteHandler('/admin/Updates/deleteUpdate', '${updates[i].id}')` %>"><i class="fa fa-trash"></i></button>
                            </td>
                          </tr>
                          <% } %>
                      </tbody>
                      <tfoot>
                        <tr>
                            <th>S#</th>
                            <th>Blog No.</th>
                            <th>Blog Heading</th>
                            <th>Blog Date</th>
                            <th style="text-align: center;">Action</th>
                        </tr>
                      </tfoot>
                    </table>
                  </div>
            </div>
          </div>
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>