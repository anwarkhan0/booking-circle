<div id="spinner">
  <div id="spinning-wheel" class="text-center ">
    <div class="spinner-grow" style="width: 4rem; height: 4rem;" role="status">
      <span class="sr-only">Loading...</span>
    </div>
  </div>
</div>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Customer</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <!-- <li class="breadcrumb-item">Customers</li> -->
            <li class="breadcrumb-item active">Hotel Info</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12" align="right">
          <a class="btn btn-secondary btn-sm" name="cancel" type="submit" onclick="history.back(-1)">Back <i
              class="fa fa-arrow-left"></i></a>
        </div><br><br>
        <div class="col-md-12">
          <div class="card card-success">
            <div class="card-header">
              <h3 class="card-title">Hotel Info</h3>
            </div>

            <!-- /.card-header -->
            <div class="card-body">
              <table class="table table-striped table-hover">
                <tbody>
                  <tr>
                    <td><b>Hotel Name: </b></td>
                    <td>
                      <%= hotel.name %>
                    </td>
                  </tr>

                  <tr>
                    <td><b>Hotel Contact #: </b></td>
                    <td>
                      <%= hotel.contact %>
                    </td>
                  </tr>

                  <tr>
                    <td><b>Hotel Parking: </b></td>
                    <td>
                      <% if(hotel.parking) { %>
                        <span class="badge badge-primary">Yes</span>
                        <% } else { %>
                          <span class="badge badge-secondary">No</span>
                          <% } %>
                    </td>

                  </tr>

                  <!-- New Data -->
                  <tr>
                    <td><b>Room Service: </b></td>
                    <td>
                      <% if(hotel.roomService) { %>
                        <span class="badge badge-primary">Yes</span>
                        <% } else { %>
                          <span class="badge badge-secondary">No</span>
                          <% } %>
                    </td>
                  </tr>
                  <!-- /New Data -->

                  <tr>
                    <td><b>Hotel Location: </b></td>
                    <td>
                      <%= hotel.area %>
                    </td>
                  </tr>

                  <tr>
                    <td><b>Hotel Address: </b></td>
                    <td>
                      <%= hotel.address %>
                    </td>
                  </tr>

                  <tr>
                    <td><b>Owner Name: </b></td>
                    <td>
                      <%= hotel.ownerName %>
                    </td>
                  </tr>

                  <tr>
                    <td><b>Owner CNIC #: </b></td>
                    <td>
                      <%= hotel.ownerCNIC %>
                    </td>
                  </tr>

                  <tr>
                    <td><b>Owner Contact: </b></td>
                    <td>
                      <%= hotel.ownerContact %>
                    </td>
                  </tr>

                  <tr>
                    <td><b>Hotel Login Email: </b></td>
                    <td>
                      <%= hotel.loginEmail %>
                    </td>
                  </tr>

                  <tr>
                    <td><b>Hotel Login Password: </b></td>
                    <td>
                      <%= hotel.loginPassword %>
                    </td>
                  </tr>

                  <tr>
                    <td><b>Hotel Status: </b></td>
                    <td>
                      <% if(hotel.approvedStatus) { %>
                        <span class="badge badge-primary">Approved</span>
                        <% } else { %>
                          <span class="badge badge-danger">Unapproved</span>
                          <% } %>
                    </td>
                  </tr>

                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>