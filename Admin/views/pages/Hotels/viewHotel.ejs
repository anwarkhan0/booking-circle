<div id="spinner">
  <div id="spinning-wheel" class="text-center ">
    <div class="spinner-grow" style="width: 4rem; height: 4rem;" role="status">
      <span class="sr-only">Loading...</span>
    </div>
  </div>
</div>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1><%= hotel.name %> </h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <!-- <li class="breadcrumb-item">Customers</li> -->
            <li class="breadcrumb-item active">Hotel Info</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12" align="right">
          <a class="btn btn-secondary btn-sm" name="cancel" type="submit" onclick="history.back(-1)">Back <i
              class="fa fa-arrow-left"></i></a>
        </div><br><br>
        <div class="col-md-12">
          <div class="card card-success"> 
            <div class="card-header">
              <h3 class="card-title">Hotel Info</h3>
            </div>

            <!-- /.card-header -->
            <div class="card-body row">

              <div class="col-md-3">
                <div class="card" style="width: 18rem;">
                  <div class="card-body">
                    <h5 class="card-title font-weight-bold">Name</h5>
                    <p class="card-text"><%= hotel.name %></p>
                  </div>
                </div>
              </div>

              <div class="col-md-3">
                <div class="card" style="width: 18rem;">
                  <div class="card-body">
                    <h5 class="card-title font-weight-bold">Location</h5>
                    <p class="card-text"><%= hotel.location %></p>
                  </div>
                </div>
              </div>

              <div class="col-md-3">
                <div class="card" style="width: 18rem;">
                  <div class="card-body">
                    <h5 class="card-title font-weight-bold">Stars</h5>
                    <p class="card-text"><%= hotel.stars %></p>
                  </div>
                </div>
              </div>

              <div class="col-md-3">
                <div class="card" style="width: 18rem;">
                  <div class="card-body">
                    <h5 class="card-title font-weight-bold">Contact</h5>
                    <p class="card-text"><%= hotel.contact %></p>
                  </div>
                </div>
              </div>

              <div class="col-md-12">
                <div class="card" style="width: 18rem;">
                  <div class="card-body">
                    <h5 class="card-title font-weight-bold">Address</h5>
                    <p class="card-text"><%= hotel.address %></p>
                  </div>
                </div>
              </div>

              <div class="col-md-3">
                <div class="card" style="width: 18rem;">
                  <div class="card-body">
                    <h5 class="card-title font-weight-bold">Facilities</h5>
                    <p class="card-text">
                      <% if(hotel.parking) { %>
                        <li class="list-group-item">Parking</li>
                        <% } %>
                          <% if(hotel.roomService) { %>
                            <li class="list-group-item">Room Service</li>
                            <% } %>
                              <% if(hotel.wifi) { %>
                                <li class="list-group-item">Wifi</li>
                                <% } %>
                                  <% if(hotel.hotWater) { %>
                                    <li class="list-group-item">Hot Water</li>
                                    <% } %>
                                      <% if(hotel.heater) { %>
                                        <li class="list-group-item">Heater</li>
                                        <% } %>
                    </p>
                  </div>
                </div>
              </div>

              <div class="col-md-3">
                <div class="card" style="width: 18rem;">
                  <div class="card-body">
                    <h5 class="card-title font-weight-bold">Owner Details</h5>
                    <p class="card-text">
                      <li class="list-group-item"><span class="font-weight-bold">Name:</span> <%= hotel.owner.name %> </li>
                      <li class="list-group-item"><span class="font-weight-bold">CNIC:</span> <%= hotel.owner.cnic %> </li>
                      <li class="list-group-item"><span class="font-weight-bold">Contact:</span> <%= hotel.owner.contact %> </li>
                      <li class="list-group-item"><span class="font-weight-bold">Email:</span> <%= hotel.owner.email %> </li>
                    </p>
                  </div>
                </div>
              </div>

              <div class="col-md-3">
                <div class="card" style="width: 18rem;">
                  <div class="card-body">
                    <h5 class="card-title font-weight-bold">Single Rooms</h5>
                    <p class="card-text">
                      <li class="list-group-item"><span class="font-weight-bold">Total:</span> <%= hotel.rooms.single.total %> </li>
                      <li class="list-group-item"><span class="font-weight-bold">Charges:</span> <%= hotel.rooms.single.charges %> </li>
                      <li class="list-group-item"><span class="font-weight-bold">Occupancy:</span> <%= hotel.rooms.single.occupancy %> </li>
                      <li class="list-group-item"><span class="font-weight-bold">View:</span> <%= hotel.rooms.single.view %> </li>
                      <li class="list-group-item"><span class="font-weight-bold">Bed Size:</span> <%= hotel.rooms.single.bedSize %> </li>
                    </p>
                  </div>
                </div>
              </div>

              <% if(hotel.rooms.twin.total > 0){ %> 
              <div class="col-md-3">
                <div class="card" style="width: 18rem;">
                  <div class="card-body">
                    <h5 class="card-title font-weight-bold">Twin Bed Rooms</h5>
                    <p class="card-text">
                      <li class="list-group-item"><span class="font-weight-bold">Total:</span> <%= hotel.rooms.twin.total %> </li>
                      <li class="list-group-item"><span class="font-weight-bold">Charges:</span> <%= hotel.rooms.twin.charges %> </li>
                      <li class="list-group-item"><span class="font-weight-bold">Occupancy:</span> <%= hotel.rooms.twin.occupancy %> </li>
                      <li class="list-group-item"><span class="font-weight-bold">View:</span> <%= hotel.rooms.twin.view %> </li>
                      <li class="list-group-item"><span class="font-weight-bold">Bed Size:</span> <%= hotel.rooms.twin.bedSize %> </li>
                    </p>
                  </div>
                </div>
              </div>
              <% } %> 

              <% if(hotel.rooms.triple.total > 0){ %> 
              <div class="col-md-3">
                <div class="card" style="width: 18rem;">
                  <div class="card-body">
                    <h5 class="card-title font-weight-bold">Triple Rooms</h5>
                    <p class="card-text">
                      <li class="list-group-item"><span class="font-weight-bold">Total:</span> <%= hotel.rooms.triple.total %> </li>
                      <li class="list-group-item"><span class="font-weight-bold">Charges:</span> <%= hotel.rooms.triple.charges %> </li>
                      <li class="list-group-item"><span class="font-weight-bold">Occupancy:</span> <%= hotel.rooms.triple.occupancy %> </li>
                      <li class="list-group-item"><span class="font-weight-bold">View:</span> <%= hotel.rooms.triple.view %> </li>
                      <li class="list-group-item"><span class="font-weight-bold">Bed Size:</span> <%= hotel.rooms.triple.bedSize %> </li>
                    </p>
                  </div>
                </div>
              </div>
              <% } %> 

              <% if(hotel.rooms.quad.total > 0){ %> 
              <div class="col-md-3">
                <div class="card" style="width: 18rem;">
                  <div class="card-body">
                    <h5 class="card-title font-weight-bold">Quadruple Rooms</h5>
                    <p class="card-text">
                      <li class="list-group-item"><span class="font-weight-bold">Total:</span> <%= hotel.rooms.quad.total %> </li>
                      <li class="list-group-item"><span class="font-weight-bold">Charges:</span> <%= hotel.rooms.quad.charges %> </li>
                      <li class="list-group-item"><span class="font-weight-bold">Occupancy:</span> <%= hotel.rooms.quad.occupancy %> </li>
                      <li class="list-group-item"><span class="font-weight-bold">View:</span> <%= hotel.rooms.quad.view %> </li>
                      <li class="list-group-item"><span class="font-weight-bold">Bed Size:</span> <%= hotel.rooms.quad.bedSize %> </li>
                    </p>
                  </div>
                </div>
              </div>
              <% } %> 

              <% if(hotel.rooms.quin.total > 0){ %> 
                <div class="col-md-3">
                  <div class="card" style="width: 18rem;">
                    <div class="card-body">
                      <h5 class="card-title font-weight-bold">Quintiple Rooms</h5>
                      <p class="card-text">
                        <li class="list-group-item"><span class="font-weight-bold">Total:</span> <%= hotel.rooms.quin.total %> </li>
                        <li class="list-group-item"><span class="font-weight-bold">Charges:</span> <%= hotel.rooms.quin.charges %> </li>
                        <li class="list-group-item"><span class="font-weight-bold">Occupancy:</span> <%= hotel.rooms.quin.occupancy %> </li>
                        <li class="list-group-item"><span class="font-weight-bold">View:</span> <%= hotel.rooms.quin.view %> </li>
                        <li class="list-group-item"><span class="font-weight-bold">Bed Size:</span> <%= hotel.rooms.quin.bedSize %> </li>
                      </p>
                    </div>
                  </div>
                </div>
                <% } %> 

            </div>
          </div>
        </div>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>