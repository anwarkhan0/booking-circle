<div id="spinner">
  <div id="spinning-wheel" class="text-center ">
    <div class="spinner-grow" style="width: 4rem; height: 4rem;" role="status">
      <span class="sr-only">Loading...</span>
    </div>
  </div>
</div>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Hotels</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item">Hotel</li>
            <li class="breadcrumb-item active">Hotels List</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <% if(flashMessage.length> 0){ %>
      <div class="alert alert-info m-3 mt-2" style="z-index: 10001;" role="alert" id="flashMessage">
        <%= flashMessage %>
      </div>
      <% } %>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card card-success">
            <div class="card-header">
              <h3 class="card-title">Hotels List</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table id="tableData" class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>S#</th>
                    <th>Name</th>
                    <th>Owner</th>
                    <th>Location</th>
                    <th>contact</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>

                  <% hotels.forEach( (hotel, i) => { %>
                    <tr id="<%= hotel.id %>">
                      <td>
                        <%= i + 1 %>
                      </td>
                      <td>
                        <%= hotel.name %>
                      </td>
                      <td>
                        <%= hotel.owner.name %> 
                      </td>
                      <td>
                        <%= hotel.location %> 
                      </td>
                      <td>
                        <%= hotel.contact %>
                      </td>
                      <td>
                        <a href="<%= '/admin/Hotels/viewHotel/' + hotel.id %>" class="btn btn-info "><i class="fa fa-eye"></i> Full Details</a>
                        <a href="<%= '/admin/Hotels/editHotel/' + hotel.id %>" class="btn btn-primary "><i class="fa fa-pencil"></i></a>
                          <button class="btn btn-danger " onClick="<%= `deleteHandler('/admin/Hotels/deleteHotel', '${hotels[i].id.toString()}')` %>"><i class="fa fa-trash"></i></button>
                      </td>
                    </tr>
                    <% }) %>

                </tbody>
                <tfoot>
                  <tr>
                    <th>S#</th>
                    <th>Name</th>
                    <th>Owner</th>
                    <th>Location</th>
                    <th>contact</th>
                    <th>Action</th>
                  </tr>
                </tfoot>
              </table>
            </div>
          </div>
        </div>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>