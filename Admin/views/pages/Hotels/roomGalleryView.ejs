<div id="spinner" >
    <div id="spinning-wheel" class="text-center ">
      <div class="spinner-grow" style="width: 4rem; height: 4rem;" role="status">
          <span class="sr-only">Loading...</span>
      </div>
    </div>
  </div>
  <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1><%= hotel %></h1>
            </div>
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item">Hotel</li>
                <li class="breadcrumb-item active">Room Gallery</li>
              </ol>
            </div>
          </div>
        </div><!-- /.container-fluid -->
      </section>
      <!-- Main content -->
      <section class="content">
        <% if(flashMessage.length> 0){ %>
          <div class="alert alert-info m-3 mt-2" style="z-index: 10001;" role="alert" id="flashMessage">
            <%= flashMessage %>
          </div>
          <% } %>
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <div class="card card-success">
                <div class="card-header">
                  <h3 class="card-title">Room Gallery</h3>
                </div>
                <div class="card-body">
                  <form action="/admin/Hotels/Rooms/updateGallery" method="POST" class="form-inline" enctype="multipart/form-data">
                    <div class="form-group">
                      <input type="file" multiple name="images" class="form-control" required>
                    </div>
                    <hr>
                    <input type="hidden" name="hotelId" value="<%= hotelId %>">
                    <div class="form-group">
                      <button class="btn btn-primary font-weight-bold" type="submit" name="">Upload</button>
                    </div>
                  </form>
                  <div class="row">
  
                    <% gallery.forEach( (image, i) => { %>
                      <div class="col-md-4" id="<%= 'elem' + i %>">
                        <img src="<%= '/uploads/' + image %>" class="img-thumbnail" style="width: 100%; height: 100%;">
                          <button style="width: 50px;" class="btn btn-danger rounded-circle" onclick="<%= `deleteImageHandler('/admin/Hotels/Rooms/DeleteGalleryImage',  '${hotelId}', '${image}', '${'elem' + i}')` %>"> <i
                              class="fa fa-trash"></i></button>
                      </div>
                    
                      <% }) %>
                
                  </div>
                  <hr>
                  <div class="form-group mt-5">
                    <a class="btn btn-secondary btn-sm" name="cancel" type="submit" onclick="history.back(-1)">Cancel</a>
                  </div>
                
                </div>
              </div>
            </div>
          </div>
          <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
      </section>
      <!-- /.content -->
    </div>