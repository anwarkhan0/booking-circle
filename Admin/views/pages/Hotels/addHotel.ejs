                        </div>
                      </div>
                    </div>
                   
                  
                  </div>

                <hr>
                <h5><b>Owner Info &amp; Login Access Details</b></h5>
                <hr>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label>Name</label>
                    <input type="text" value="<%= oldInput.ownerName %>" name="ownerName" placeholder="Owner Full Name" class="form-control" required>
                  </div>

                  <div class="form-group col-md-3">
                    <label>CNIC #</label>
                    <input type="number" name="ownerCNIC" value="<%= oldInput.ownerCNIC %>" placeholder="xxxxxxxxxxxxx" class="form-control"
                      required>
                  </div>

                  <div class="form-group col-md-3">
                    <label>Contact</label>
                    <input type="number" name="ownerContact" value="<%= oldInput.ownerContact %>" placeholder="03xxxxxxxxx" class="form-control"
                      required>
                  </div>


                  <div class="form-group col-md-6">
                    <label>Login Email</label>
                    <input type="email" value="<%= oldInput.loginEmail %>" name="loginEmail" placeholder="example@gmail.com" class="form-control"
                      required>
                  </div>

                  <div class="form-group col-md-3">
                    <label>Password</label>
                    <input type="password" value="<%= oldInput.password %>" name="loginPassword" placeholder=""
                      class="form-control" required>
                  </div>
                  <div class="form-group col-md-3">
                    <label>Confirm Password</label>
                    <input type="password" value="<%= oldInput.password %>" name="cnfmPassword" placeholder=""
                      class="form-control" required>
                  </div>
                </div>


                <hr>
                <div class="form-group">
                  <a class="btn btn-secondary btn-sm" name="cancel" type="submit" onclick="history.back(-1)">Cancel</a>
                  <button class="btn btn-success btn-sm" type="submit" name="">Add Hotel</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<script>
  function removeSingleElem(){
    document.getElementById("singleElem").remove()
  }
  function removeTwinElem(){
    document.getElementById("twinElem").remove()
  }
  function removeTripleElem(){
    document.getElementById("tripleElem").remove()
  }
  function removeQuadElem(){
    document.getElementById("quadElem").remove()
  }
  function removeQuinElem(){
    document.getElementById("quinElem").remove()
  }
</script>