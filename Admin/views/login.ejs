<!doctype html>
<html lang="en">

<head>
	<title>Admin</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<!-- <link rel="stylesheet" href="/IndexAssets/css/style.css"> -->
	<link rel="stylesheet" href="/admin/IndexAssets/css/style.css">

</head>

<body class="img js-fullheight" style="background-image: url(/admin/IndexAssets/images/bg.gif);">
	<section class="ftco-section">
		<div class="container">
			<% if(flashMessage.length> 0){ %>
				<div class="alert alert-danger m-3 mt-2" style="z-index: 1000001;" role="alert" id="flashMessage">
				  <%= flashMessage %>
				</div>
				<% } %>
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Login</h2>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-4">
					<div class="login-wrap p-0">
						<h3 class="mb-4 text-center">Welcome To BookingRing</h3>
						<form action="/admin/postLogin" class="signin-form" method="POST" novalidate>
							<div class="form-group">
								<input type="text" name="email" value="<%= oldInput.email %>" class="form-control" placeholder="Email" required>
							</div>
							<div class="form-group">
								<input id="password-field" value="<%= oldInput.password %>" name="password" type="password" class="form-control" placeholder="Password"
									required>
								<span toggle="#password-field"
									class="fa fa-fw fa-eye field-icon toggle-password"></span>
							</div>
							<br>
							<div class="form-group">
								<label for="sel1">Login As:</label>
								<select class="form-control bg-secondary" name="type">
									<option value="adminLogin">Admin</option>
									<option value="owenrLogin">Property Owner</option>
								</select>
							</div>
							<!-- <p class="w-100 text-center"><hr style="background-color: white"></p> -->
							<br>
							<div class="form-group">
								<button type="submit" class="form-control btn btn-info submit px-3"
									>Sign
									In</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="/admin/IndexAssets/js/jquery.min.js"></script>
	<script src="/admin/IndexAssets/js/popper.js"></script>
	<script src="/admin/IndexAssets/js/bootstrap.min.js"></script>
	<script src="/admin/IndexAssets/js/main.js"></script>


</body>

</html>