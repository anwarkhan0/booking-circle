<!-- Primary Page Layout
	================================================== -->
<div class="section big-55-height over-hide z-bigger customClass">

    <div class="parallax parallax-top" style="background-image: url('/img/Hotel2.jpg')"></div>
    <div class="dark-over-pages"></div>

    <div class="hero-center-section pages">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 parallax-fade-top">
                    <div class="hero-text"> <%= typeof location === 'undefined' ? 'Our Hotels' : location + ' ' + 'Hotels' %> </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container sliderContainerClass" id="fixed">
    <div class="row">
        <p class="text-danger font-weight-bold" style="display: none;" id="error">Please fill All the fields.</p>
        <div class="col-12">
            <div class="booking-hero-wrap customWrapper">
                <div class="row justify-content-center customJustifier">
                    
                    <div class="col-md-4 col-sm-12" id="dateId">
                        <div class="input-daterange input-group" id="flight-datepicker">
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-item inputClass">
                                        <span class="fontawesome-calendar"></span>
                                        <input class="input-sm" type="text" autocomplete="off" id="start-date-1"
                                            name="start" placeholder="chech-in date" data-date-format="DD-MM-d" />
                                        <span class="date-text date-depart"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-item inputClass">
                                        <span class="fontawesome-calendar"></span>
                                        <input class="input-sm" type="text" autocomplete="off" id="end-date-1"
                                            name="end" placeholder="check-out date" data-date-format="DD-MM-d" />
                                        <span class="date-text date-return"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12" >
                        <div class="row">
                            <div class="col-5 selectClassCustom">
                                <select class="wide nice-select" id="area">
                                    <% areas.forEach( location => { %> 
                                    <option data-display="Select Location"></option>
                                    <option value="<%= location.name %>"><%= location.name %></option>
                                    <% }) %> 
                                </select>
                            </div>

                            <div class="col-3 selectClassCustom">
                                <select name="adults" class="wide" id="adults">
                                    <option data-display="adults" value="false">adults</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                </select>
                            </div>

                            <div class="col-4 selectClassCustom">
                                <select name="children" class="wide" id="children">
                                    <option  value="0" >Children</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                </select>
                            </div>

                            
                        </div>
                    </div>
                    <div class="col-6  col-sm-4 col-md-2">
                        <a class="booking-button" id="searchHotels" href="javascript:;">Search!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="section padding-top-bottom over-hide background-grey">
    <div class="container">
        <div class="row justify-content-center">
            
            <% hotels.forEach(hotel => { %> 
            <div class="col-md-4 mt-4 mt-md-0" data-scroll-reveal="enter bottom move 50px over 0.7s after 0.2s">
                <div class="room-box background-white">
                    <div class="room-per">
                        <% for(let i= 1; i <= hotel.stars; i++){ %> 
                        <i class="fa fa-star"></i>
                        <% } %> 
                    </div>
                    <img src="/uploads/<%= hotel.gallery[0] ? hotel.gallery[0] : 'noImage.png' %>" alt="<%= hotel.name %>">
                    <div class="room-box-in">
                        <h5 class=""><%= hotel.name %></h5>
                        <p class="mt-3"><strong>Address: </strong><%= hotel.address %> </p>
                        <a class="mt-1 btn btn-primary" href="/Hotels/rooms/<%= hotel.id %>">Check Rooms</a>
                        <a class="mt-1 btn btn-primary" href="/Hotels/hotelGallery/<%= hotel.id %>">Hotel Gallery</a>
                    </div>
                </div>
            </div>
            <% }) %> 
           
        </div>
    </div>
</div>