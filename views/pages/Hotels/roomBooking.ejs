<!-- Primary Page Layout
	================================================== -->

<div class="section big-55-height over-hide customClass">

    <div class="parallax parallax-top" style="background-image: url(`/uploads/${hotel.gallery[0]}`)"></div>
    <div class="dark-over-pages"></div>

    <div class="hero-center-section pages">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 parallax-fade-top">
                    <div class="hero-text">
                        <%= hotel.name %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="section background-dark padding-top-bottom-smaller over-hide">
    <div class="section z-bigger">
        <div class="container">
            <div class="row">

                <% if(hotel.hotWater){ %>
                    <div class="col-6 col-sm-6 col-md-4 col-lg-2 text-center">
                        <div class="amenities">
                            <img src="/img/icons/HotWater.svg" alt="">
                            <p>Hot Water</p>
                        </div>
                    </div>
                    <% } %>
                        <div class="col-6 col-sm-6 col-md-4 col-lg-2 text-center">
                            <div class="amenities">
                                <img src="/img/icons/2.svg" alt="">
                                <p>
                                    <%= hotel.rooms.single.bedSize %>
                                        <%= hotel.rooms.twin.bedSize %>
                                            <%= hotel.rooms.triple.bedSize %>
                                                <%= hotel.rooms.quad.bedSize %>
                                </p>
                            </div>
                        </div>
                        <% if(hotel.heater){ %>
                            <div class="col-6 col-sm-6 col-md-4 col-lg-2 text-center mt-4 mt-md-0">
                                <div class="amenities">
                                    <img src="/img/icons/heater.png" alt="">
                                    <p>Heater / AC</p>
                                </div>
                            </div>
                            <% } %>
                                <% if(hotel.parking){ %>
                                    <div class="col-6 col-sm-6 col-md-4 col-lg-2 text-center mt-4 mt-lg-0">
                                        <div class="amenities">
                                            <img src="/img/icons/johnny_automatic_NPS_map_pictographs_part_52.svg"
                                                alt="">
                                            <p>Parking</p>
                                        </div>
                                    </div>
                                    <% } %>
                                        <% if(hotel.rooms.single.view> 0){ %>
                                            <div class="col-6 col-sm-6 col-md-4 col-lg-2 text-center mt-4 mt-lg-0">
                                                <div class="amenities">
                                                    <img src="/img/icons/5.svg" alt="">
                                                    <p>Balcony</p>
                                                </div>
                                            </div>
                                            <% } %>
                                                <% if(hotel.roomService){ %>
                                                    <div
                                                        class="col-6 col-sm-6 col-md-4 col-lg-2 text-center mt-4 mt-lg-0">
                                                        <div class="amenities">
                                                            <img src="/img/icons/6.svg" alt="">
                                                            <p>Room Service</p>
                                                        </div>
                                                    </div>
                                                    <% } %>

            </div>
        </div>
    </div>
</div>

