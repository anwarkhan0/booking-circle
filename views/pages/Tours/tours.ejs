<!-- Primary Page Layout
	================================================== -->

<div class="section big-55-height over-hide z-bigger customClass">

    <div class="parallax parallax-top" style="background-image: url('../img/tours.jpg')"></div>
    <div class="dark-over-pages"></div>

    <div class="hero-center-section pages">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 parallax-fade-top">
                    <div class="hero-text">Tours/Hikes</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container sliderContainerClass" id="fixed">
    <div class="row">
        <div class="col-12 mt-3">
            <div class="booking-hero-wrap customWrapper">
                <div class="row justify-content-center customJustifier">
                    <div class="col-10">
                        <!-- <select class="wide nice-select select2"> -->
                        <select class="wide nice-select" id="tourArea">
                            <% areas.forEach(area => { %> 
                            <option value="<%= area.name %>"><%= area.name %></option>
                            <% }) %> 
                        </select>
                    </div>

                    <div class="col-6 col-sm-4 col-lg-2">
                        <a class="booking-button" href="javascript: ;" onclick="tourSearch()">Search!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Tours sections -->
<div class="section padding-top-bottom over-hide">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 align-self-center">
                <div class="subtitle with-line text-center mb-4">Booking Ring</div>
                <h3 class="text-center padding-bottom-small">Tours</h3>
            </div>
        </div>
    </div>
</div>

<div class="section background-grey over-hide">
    <div class="container-fluid px-0">

        <% tours.forEach( (tour, i) => { %> 
            <!-- this condition just to mantain the styling behaviour as expected -->
            <% if(i%2===0){ %> 
        <div class="row mx-0">
            <div class="col-xl-6 px-0">
                <div class="img-wrap" id="rev-1">
                    <img src="/uploads/<%= tour.gallery[0] %>" alt="">
                    <div class="text-element-over">Tour to <%= tour.toPlace %></div>
                </div>
            </div>
            <div class="col-xl-6 px-0 mt-4 mt-xl-0 align-self-center">
                <div class="row justify-content-center">
                    <div class="col-10 col-xl-8 text-center">
                        <h3 class="text-center"><%= tour.toPlace %> Tour</h3>
                        <p class="text-center mt-4"><b>Tour: </b> <%= tour.fromPlace %> to <%= tour.toPlace %></p>
                        <p class="text-center mt-4"><b>Date: </b> <%= tour.startDate %></p>
                        <p class="text-center mt-4"><b>Duration: </b> <%= tour.days %> Days <%= tour.nights %> Nights</p>
                        <a class="mt-5 btn btn-primary" href="/Tours/booking/<%= tour.id %>">Reserve Seat!</a>
                        <a class="mt-5 btn btn-info" href="#">Wishlist!</a>
                    </div>
                </div>
            </div>
        </div>
        <% }else{ %> 
        <div class="row mx-0">
            <div class="col-xl-6 px-0 mt-4 mt-xl-0 pb-5 pb-xl-0 align-self-center">
                <div class="row justify-content-center">
                    <div class="col-10 col-xl-8 text-center">
                        <h3 class="text-center"><%= tour.toPlace %> Tour</h3>
                        <p class="text-center mt-4"><b>Tour: </b> <%= tour.fromPlace %> to <%= tour.toPlace %></p>
                        <p class="text-center mt-4"><b>Date: </b> <%= tour.startDate %></p>
                        <p class="text-center mt-4"><b>Duration: </b> <%= tour.days %> Days <%= tour.nights %> Nights</p>
                        <a class="mt-5 btn btn-primary" href="/Tours/booking">Reserve Seat!</a>
                        <a class="mt-5 btn btn-info" href="#">Wishlist!</a>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 px-0 order-first order-xl-last mt-5 mt-xl-0">
                <div class="img-wrap" id="rev-2">
                    <img src="/uploads/<%= tour.gallery[0] %>" alt="" />
                    <div class="text-element-over">Tour to <%= tour.toPlace %></div>
                </div>
            </div>
        </div>
        <% } %> 
        <% }) %> 

    </div>
</div>

<!-- Hikes section -->
<div class="section padding-top-bottom over-hide">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 align-self-center">
                <!-- <div class="subtitle with-line text-center mb-4">Booking Ring</div> -->
                <h3 class="text-center padding-bottom-small">Hikes</h3>
            </div>
        </div>
    </div>
</div>

<div class="section background-grey over-hide">
    <div class="container-fluid px-0">
        <% hikes.forEach( (hike, i) =>{ %> 
             <!-- this condition just to mantain the styling behaviour as expected nothing else -->
            <% if(i%2===0){ %> 
        <div class="row mx-0">
            <div class="col-xl-6 px-0">
                <div class="img-wrap" id="rev-1">
                    <img src="/uploads/<%= hike.gallery[0] %>" alt="">
                    <div class="text-element-over">Hike to <%= hike.toPlace %></div>
                </div>
            </div>
            <div class="col-xl-6 px-0 mt-4 mt-xl-0 align-self-center">
                <div class="row justify-content-center">
                    <div class="col-10 col-xl-8 text-center">
                        <h3 class="text-center"><%= hike.toPlace %> Hike</h3>
                        <p class="text-center mt-4"><b>Tour: </b> <%= hike.fromPlace %> to <%= hike.toPlace %></p>
                        <p class="text-center mt-4"><b>Date: </b> <%= hike.startDate %></p>
                        <p class="text-center mt-4"><b>Duration: </b> <%= hike.days %> Days <%= hike.nights %> Nights</p>
                        <a class="mt-5 btn btn-primary" href="/Tours/booking/<%= hike.id %> ">Confirm Hike!</a>
                        <a class="mt-5 btn btn-info" href="#">Wishlist!</a>
                    </div>
                </div>
            </div>
        </div>
        <% }else{ %> 
        <div class="row mx-0">
            <div class="col-xl-6 px-0 mt-4 mt-xl-0 pb-5 pb-xl-0 align-self-center">
                <div class="row justify-content-center">
                    <div class="col-10 col-xl-8 text-center">
                        <h3 class="text-center"><%= hike.toPlace %> Hike</h3>
                        <p class="text-center mt-4"><b>Tour: </b> <%= hike.fromPlace %> to <%= hike.toPlace %></p>
                        <p class="text-center mt-4"><b>Date: </b> <%= hike.startDate %></p>
                        <p class="text-center mt-4"><b>Duration: </b> <%= hike.days %> Days <%= hike.nights %> Nights</p>
                        <a class="mt-5 btn btn-primary" href="/Tours/booking">Confirm Hike!</a>
                        <a class="mt-5 btn btn-info" href="#">Wishlist!</a>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 px-0 order-first order-xl-last mt-5 mt-xl-0">
                <div class="img-wrap" id="rev-2">
                    <img src="/uploads/<%= hike.gallery[0] %>" alt="">
                    <div class="text-element-over">Hike to <%= hike.toPlace %></div>
                </div>
            </div>
        </div>
        <% } }) %> 
    </div>
</div>

<script>
    function tourSearch(){
        const area = document.getElementById('tourArea').value;
        window.location.href = '/Tours/'+area;
    }
</script>