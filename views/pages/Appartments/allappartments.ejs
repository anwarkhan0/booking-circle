<div class="container sliderContainerClass" id="fixed">
    <div class="row">
        <div class="col-12 mt-3">
            <div class="booking-hero-wrap customWrapper">
                <div class="row justify-content-center customJustifier">
                    <div class="col-md-5 col-sm-12" id="dateId">
                        <div class="input-daterange input-group" id="flight-datepicker">
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-item inputClass">
                                        <span class="fontawesome-calendar"></span>
                                        <input class="input-sm" type="text" autocomplete="off" id="start-date-1"
                                            name="start" placeholder="chech-in date" data-date-format="DD, MM d" />
                                        <span class="date-text date-depart"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-item inputClass">
                                        <span class="fontawesome-calendar"></span>
                                        <input class="input-sm" type="text" autocomplete="off" id="end-date-1"
                                            name="end" placeholder="check-out date" data-date-format="DD, MM d" />
                                        <span class="date-text date-return"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-5 col-sm-12" id="dateId">
                        <div class="row">
                            <div class="col-6 selectClassCustom">
                                <select class="wide nice-select" id="area">
                                    <option data-display="Select Location" value=""></option>
                                    <% for(let i= 0; i< areas.length; i++){ %> 
                                    <option value="<%= areas[i].name %>"><%= areas[i].name %></option>
                                    <% } %> 
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-6  col-sm-4 col-lg-2">
                        <a class="booking-button" href="javascript: ;" id="searchAppartments">Search!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="section padding-top-bottom over-hide background-grey">
    <div class="container">
        <div class="row justify-content-center">

            <% for(let i= 0; i< appartments.length; i++){ %> 
            <div class="col-md-4 mt-4 mt-md-0" data-scroll-reveal="enter bottom move 50px over 0.7s after 0.2s">
                <div class="room-box background-white">
                    <img src="<%= '/uploads/' + appartments[i].gallery[0] %>" alt="">
                    <div class="room-box-in">
                        <h5 class=""><%= appartments[i].name %></h5>
                        <p class="mt-3"><strong>Address: </strong> <%= appartments[i].address %> </p>
                        <a class="mt-1 btn btn-primary" href="/Appartments/apartmentBooking/<%= appartments[i].id %>">Select Apartment</a>
                        <!-- <a class="mt-1 btn btn-primary" href="/Appartments/appartmentGallery">Gallery</a> -->
                    </div>
                </div>
            </div>
            <% } %> 

        </div>
    </div>
</div>